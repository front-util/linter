{
  "name": "@front-utils/linter",
  "version": "0.6.3",
  "description": "Configuration files for linting",
  "author": "IVGolubev",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/front-util/linter.git"
  },
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "check:lint": "eslint ./src --max-warnings=0 --fix",
    "gen:dts": "tsc index.ts --declaration --emitDeclarationOnly",
    "publish:linter": "npm publish --access public"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --no-stash",
    "preserveUnused": true
  },
  "publishConfig": {
    "access": "public",
    "ignore": [
      ".github/",
      "*.md",
      "*.config.js",
      ".editorconfig",
      "tsconfig.json"
    ]
  },
  "keywords": [
    "ESLint",
    "ESLint-custom-config",
    "Eslint configuration",
    "ESLint-plugin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-syntax-import-assertions": "*",
    "@babel/plugin-syntax-jsx": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.13.0",
    "eslint": "^9.13.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-compat": "^6.0.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-sonarjs": "^1.0.4",
    "eslint-plugin-testing-library": "^6.4.0",
    "globals": "^15.11.0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "typescript-eslint": "^8.11.0"
  },
  "peerDependencies": {
    "@eslint/js": ">=9.0.0",
    "eslint": ">=8.0.0 || ^9.0.0",
    "eslint-import-resolver-alias": ">=1.0.0",
    "eslint-import-resolver-typescript": ">=3.0.0",
    "eslint-plugin-compat": ">=6.0.0",
    "eslint-plugin-filenames": ">=1.0.0",
    "eslint-plugin-import": ">=2.0.0",
    "eslint-plugin-jsx-a11y": ">=6.0.0",
    "eslint-plugin-optimize-regex": ">=1.0.0",
    "eslint-plugin-promise": ">=6.0.0",
    "eslint-plugin-sonarjs": ">=1.0.0",
    "typescript-eslint": ">=8.0.0"
  },
  "optionalDependencies": {
    "eslint-plugin-jest-dom": ">=5.4.0",
    "eslint-plugin-react": ">=7.37.2",
    "eslint-plugin-react-hooks": ">=4.6.2",
    "eslint-plugin-testing-library": ">=6.4.0",
    "@babel/core": ">=7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/plugin-syntax-import-assertions": ">=7.26.0",
    "@babel/plugin-syntax-jsx": ">=7.25.9",
    "@babel/preset-env": ">=7.26.0",
    "@babel/preset-react": ">=7.25.9",
    "@babel/preset-typescript": ">=7.26.0",
    "globals": ">=15.11.0"
  }
}
