{
  "name": "@front-utils/linter",
  "version": "0.6.1",
  "description": "Configuration files for linting",
  "author": "IVGolubev",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/front-util/linter.git"
  },
  "types": "index.d.ts",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "check:lint": "eslint ./src --max-warnings=0 --fix",
    "gen:dts": "tsc index.ts --declaration --emitDeclarationOnly",
    "publish:linter": "npm publish --access public"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --no-stash",
    "preserveUnused": true
  },
  "publishConfig": {
    "access": "public",
    "ignore": [
      ".github/",
      "*.md",
      "*.config.js",
      ".editorconfig",
      "tsconfig.json"
    ]
  },
  "keywords": [
    "ESLint",
    "ESLint-custom-config",
    "Eslint configuration",
    "ESLint-plugin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/eslint-parser": "*",
    "@babel/plugin-syntax-import-assertions": "*",
    "@babel/plugin-syntax-jsx": "*",
    "@babel/preset-env": "*",
    "@babel/preset-react": "*",
    "@babel/preset-typescript": "*",
    "@eslint/js": "*",
    "eslint": "*",
    "eslint-import-resolver-alias": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-compat": "*",
    "eslint-plugin-filenames": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jest-dom": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-optimize-regex": "*",
    "eslint-plugin-promise": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-sonarjs": "*",
    "eslint-plugin-testing-library": "*",
    "globals": "*",
    "lint-staged": "*",
    "simple-git-hooks": "*",
    "typescript-eslint": "*"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^8.0.0 | ^9.0.0",
    "eslint-import-resolver-alias": "^1.0.0",
    "eslint-import-resolver-typescript": "^3.0.0",
    "eslint-plugin-compat": "^5.0.0",
    "eslint-plugin-filenames": "^1.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-optimize-regex": "^1.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-sonarjs": "^1.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "optionalDependencies": {
    "eslint-plugin-jest-dom": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.",
    "eslint-plugin-testing-library": "^6.0.0",
    "@babel/core": "^7.0.0",
    "@babel/eslint-parser": "^7.0.0",
    "@babel/plugin-syntax-import-assertions": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "globals": "^15.0.0"
  }
}
