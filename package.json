{
  "name": "@front-utils/linter",
  "version": "1.2.0",
  "description": "Configuration files for linting",
  "author": "IVGolubev",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/front-util/linter.git"
  },
  "types": "./types/index.d.ts",
  "exports": {
    "./types/*": "./types/*",
    "./dist/*": {
      "import": "./dist/*",
      "types": "./types/*"
    },
    ".": {
      "import": "./dist/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "check-lint": "eslint --max-warnings=0 --fix --cache",
    "check-types": "tsc --noEmit",
    "test": "bun test",
    "publish-linter": "bun run build && npm publish --access public",
    "build": "rm -rf dist && rm -rf types && tsc -p tsconfig.build.json"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged --no-stash",
    "pre-push": "bun run test",
    "preserveUnused": true
  },
  "publishConfig": {
    "access": "public",
    "ignore": [
      ".github/",
      "tsconfig.json"
    ]
  },
  "keywords": [
    "ESLint",
    "ESLint-custom-config",
    "Eslint configuration",
    "ESLint-plugin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.0.0",
    "@types/bun": "^1.2.21",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.18.0",
    "bun": "^1.2.21",
    "eslint": "^8.0.0",
    "eslint-import-resolver-alias": "^8.0.0",
    "eslint-import-resolver-typescript": "^8.0.0",
    "eslint-plugin-compat": "^8.0.0",
    "eslint-plugin-filenames": "^8.0.0",
    "eslint-plugin-import": "^8.0.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^8.0.0",
    "eslint-plugin-optimize-regex": "^8.0.0",
    "eslint-plugin-promise": "^8.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^8.0.0",
    "eslint-plugin-sonarjs": "^8.0.0",
    "eslint-plugin-testing-library": "^7.6.6",
    "globals": "^15.11.0",
    "lint-staged": "^15.5.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "typescript-eslint": ">=8.41.0"
  },
  "peerDependencies": {
    "@eslint/js": ">=9.0.0",
    "eslint": ">=8.0.0 || >=9.0.0",
    "eslint-import-resolver-alias": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-compat": "*",
    "eslint-plugin-filenames": "*",
    "eslint-plugin-security": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-optimize-regex": "*",
    "eslint-plugin-promise": "*",
    "eslint-plugin-sonarjs": "*",
    "typescript-eslint": "*"
  },
  "peerDependenciesMeta": {
    "typescript-eslint": {
      "optional": true
    },
    "eslint-import-resolver-typescript": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "eslint-plugin-jest-dom": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-testing-library": "*",
    "globals": "*",
    "typescript-eslint": "*"
  }
}