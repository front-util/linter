{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "esnext",                      
    "module": "ESNext",                    
    "allowJs": true,                     
    "declaration": true,                     
    "declarationMap": true,       
    "declarationDir": "./types",         
    "outDir": "./dist",  
    "rootDir": "./src",                
    "strict": true,                           
    "noImplicitAny": true,                    
    "moduleResolution": "node",            
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                  
  },
  "exclude": ["node_modules", "dist", ".vscode"],
  "include": ["./src/**/*"]
}